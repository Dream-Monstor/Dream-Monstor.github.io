        <section class="chatbot-container">
            <div class="chatbot">
                <h2>Chat with Me!</h2>
                <input class="chat-input" type="text" id="userInput" placeholder="Type your message here...">
                <button class="chat-button" onclick="chatResponse()">Send</button>
                <div id="chatResponse" style="margin-top: 20px; color: #4b2e83;"></div>
            </div>
        </section>
    </main>

    <script>
        function chatResponse() {
            const userInput = document.getElementById('userInput').value;
            const responseBox = document.getElementById('chatResponse');

            if (!userInput) {
                responseBox.innerHTML = "Please type a message to start the chat!";
                return;
            }

            responseBox.innerHTML = `You said: "${userInput}"<br>Thank you for reaching out!`;
            document.getElementById('userInput').value = "";
        }
    </script>
